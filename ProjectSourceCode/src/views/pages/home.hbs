<head>
    <title>Home</title>

<style>
    .divider{
    width:5px;
    height:auto;
    display:inline-block;
    }
    label {
        padding: 12px 12px 12px 0;
        display: inline-block;
    }
    .col-25 {
        float: right;
        width: 25%;
        margin-top: 6px;
    }
    .col-75 {
        float: right;
        width: 75%;
        margin-top: 6px;
    }
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
    .input {
        width: 100%;
    }
</style>

<button class="btn btn-primary rounded-full" style="float: right;" onclick="my_modal.showModal()">Add Event</button>
<dialog id="my_modal" class="modal">
    <div class="modal-box">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
    </form>
    <h3 class="text-lg font-bold text-center">Create New Event:</h3>
    <form action="/">
        <div class="row">
        <div class="col-75">
            <input class="input" type="text" id="company" name="company" placeholder="enter the company name...">
        </div>
        <div class="col-25">
            <label for="company">Company:</label>
        </div>
        </div>
        <div class="row">
        <div class="col-75">
            <input class="input" type="text" id="job_name" name="job_name" placeholder="enter the job name...">
        </div>
        <div class="col-25">
            <label for="job_name">Job Name:</label>
        </div>
        </div>
        <div class="row">
        <div class="col-75">
            <input class="input" type="text" id="date_applied" name="date_applied" placeholder="enter the date you applied...">
        </div>
        <div class="col-25">
            <label for="date_applied">Date Applied:</label>
        </div>
        </div>
        <div class="row">
        <div class="col-75">
            <select class="input" id="status" name="status">
                <option>Select Status...</option>
                <option value="applied">Applied</option>
                <option value="not-applied">Not Applied</option>
                <option value="accepted">Accepted</option>
                <option value="denied">Denied</option>
            </select>
        </div>
        <div class="col-25">
            <label for="status">Status:</label>
        </div>
        </div>
    </form>
        <div style="padding-top: 10px">
            <form method="dialog" style="padding-right: 10px;">
                <button type="submit" class="btn btn-primary" style="float: right; padding: 15px 32px;">Submit</button>
            </form>
            <form method="dialog">
                <button class="btn btn-secondary" style="float: right; margin-right: 5px;">Close</button>
            </form>
        </div>
  </div>
</dialog>
</head>

