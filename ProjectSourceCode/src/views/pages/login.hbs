<!DOCTYPE html>
<html lang="en">
<body>
    <div class="hero min-h-screen bg-base-200">
        <div class="hero-content flex-col lg:flex-row-reverse w-full max-w-3xl">
            <div class="card w-full shadow-lg bg-base-100">
                <div class="card-body">
                    <h1 class="text-4xl font-bold text-center mb-6">Login</h1>
                    <!-- Error Message Section -->
                    {{#if error}}
                        <div role="alert" class="alert alert-warning shadow-md">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 shrink-0 stroke-current"
                                fill="none"
                                viewBox="0 0 24 24">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            <span class="ml-2">{{error}}</span>
                        </div>
                    {{/if}}
                    
                    <form action="/login" method="POST">
                        <div class="form-control mb-4">
                            <label class="label">
                                <span class="label-text font-medium">Username</span>
                            </label>
                            <input type="text" class="input input-bordered" id="username" name="username" placeholder="Enter username" required />
                        </div>
                        
                        <div class="form-control mb-4">
                            <label class="label">
                                <span class="label-text font-medium">Password</span>
                            </label>
                            <input type="password" class="input input-bordered" id="password" name="password" placeholder="Enter password" required />
                        </div>
                        
                        <div class="form-control mt-6">
                            <button type="submit" class="btn btn-primary w-full">Login</button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-4">
                        <span class="text-sm">Don't have an account?</span>
                        <a class="link link-primary" href="/register">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
